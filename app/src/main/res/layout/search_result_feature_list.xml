<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:paddingTop="@dimen/setting_padding_top"
              android:paddingBottom="@dimen/setting_padding_bottom"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <com.creative.spotifykt.spotifylite.ui.view.EncoreBoldTextView
            android:id="@+id/text_title"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_feature_music"
            tools:listitem="@layout/item_music_square"
            tools:itemCount="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>