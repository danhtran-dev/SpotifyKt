<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryBackground"
        tools:context=".ui.premium.PremiumFragment">
    <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:gravity="top|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <include layout="@layout/layout_toolbar"
                     android:visibility="invisible"
                     android:id="@+id/premium_toolbar"/>

            <com.creative.spotifykt.ui.view.EncoreBoldTextView
                    android:text="Get more out of your\nmusic with Premium"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list_diff_info"
                    tools:listitem="@layout/item_premium_info"
                    tools:itemCount="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.creative.spotifykt.ui.view.EncoreBoldTextView
                    android:text="@string/get_premium"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="25dp"
                    android:paddingEnd="25dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.creative.spotifykt.ui.view.EncoreTextView
                    android:textSize="9sp"
                    android:text="@string/terms_and_conditions_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.creative.spotifykt.ui.view.EncoreBoldTextView
                            android:text="@string/spotify_free"
                            android:textSize="18sp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <com.creative.spotifykt.ui.view.EncoreTextView
                            android:text="@string/current_plan"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="2dp"
                    app:contentPaddingRight="30dp"
                    app:contentPaddingLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.creative.spotifykt.ui.view.EncoreBoldTextView
                                android:id="@+id/mini_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="From 2,300đ"
                                android:layout_alignParentEnd="true"
                        />
                        <com.creative.spotifykt.ui.view.EncoreTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FOR 1 DAY"
                                android:layout_below="@id/mini_price"
                                android:layout_alignParentEnd="true"
                        />
                        <com.creative.spotifykt.ui.view.EncoreBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mini"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                        />
                    </RelativeLayout>
                    <com.creative.spotifykt.ui.view.EncoreTextView
                            android:text="@string/mini_desc"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <com.creative.spotifykt.ui.view.EncoreBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/view_plans"
                    />
                    <com.creative.spotifykt.ui.view.EncoreTextView
                            android:text="@string/terms_and_conditions_apply"
                            android:textSize="9sp"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_margin="10dp"
                    app:cardCornerRadius="6dp"
                    app:cardBackgroundColor="@color/cardview_dark_background"
                    app:cardElevation="2dp"
                    app:contentPaddingRight="30dp"
                    app:contentPaddingLeft="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <RelativeLayout
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.creative.spotifykt.ui.view.EncoreBoldTextView
                                android:id="@+id/premium_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="From 2,300đ"
                                android:layout_alignParentEnd="true"
                        />
                        <com.creative.spotifykt.ui.view.EncoreTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FOR 1 DAY"
                                android:layout_below="@id/premium_price"
                                android:layout_alignParentEnd="true"
                        />
                        <com.creative.spotifykt.ui.view.EncoreBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mini"
                                android:layout_centerVertical="true"
                                android:layout_alignParentStart="true"
                        />
                    </RelativeLayout>
                    <com.creative.spotifykt.ui.view.EncoreTextView
                            android:text="@string/mini_desc"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <com.creative.spotifykt.ui.view.EncoreBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/view_plans"
                    />
                    <com.creative.spotifykt.ui.view.EncoreTextView
                            android:text="@string/terms_and_conditions_apply"
                            android:textSize="9sp"
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>